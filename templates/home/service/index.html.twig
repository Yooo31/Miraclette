{% extends 'home/index.html.twig' %}

{% block content %}
  <div class="mx-auto mb-8 max-w-screen-sm lg:mb-16">
    <a href="{{ path('order.index') }}" class="w-full flex items-center justify-center py-2 px-4 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-primary-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700" type="button">
      <svg class="h-3.5 w-3.5 mr-2" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
          <path clip-rule="evenodd" fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" />
      </svg>
      Passer une commande
    </a>

    {% if orders %}
      {% for order in orders %}
        {% set bgClass = '' %}

        {% if order.status.name == 'En cours' %}
            {% set bgClass = 'bg-red-900 text-red-300' %}
        {% elseif order.status.name == 'Prêt' %}
            {% set bgClass = 'bg-green-900 text-green-300' %}
        {% else %}
            {% set bgClass = '' %}
        {% endif %}

        <div id="commandId" class="w-1/2 mx-auto text-center text-gray-500 dark:text-gray-400 border p-4 mt-12">
          <h3 class="mb-1 text-xl font-semibold tracking-tight text-gray-900 dark:text-white">Table n°{{ order.booking.location }}</h3>
          <h4 class="mb-1 text-lg font-semibold tracking-tight text-gray-900 dark:text-white flex items-center justify-center">
            Status
            <span class="{{ bgClass }} ml-2 text-xs font-medium me-2 px-2.5 py-0.5 rounded-full">{{ order.status.name }}</span>
          </h4>
          <p class="font-light text-sm text-gray-500 dark:text-gray-400 flex justify-center items-center">
            <span class="flex-grow border-t border-gray-300 mx-2"></span> Voir plus <span class="flex-grow border-t border-gray-300 mx-2"></span>
          </p>
        </div>
      {% endfor %}
    {% else %}
      {% include 'components/empty.html.twig' with {'text': 'Aucune commande en cours...'} %}
    {% endif %}

  </div>
{% endblock %}